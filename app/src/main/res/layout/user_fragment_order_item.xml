<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/delivery_order_item"
        android:layout_width="359dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textColor="#C83000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delivery_customer_address" />

    <TextView
        android:id="@+id/delivery_customer_address"
        android:layout_width="351dp"
        android:layout_height="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delivery_customer_name" />

    <TextView
        android:id="@+id/delivery_order_status"
        android:layout_width="174dp"
        android:layout_height="22dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="20dp"
        android:text="@string/status"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order_id"
        android:layout_width="57dp"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="@string/_100"
        android:textColor="#F30606"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/delivery_button"
        android:layout_width="108dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="Button"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/delivery_order_status"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/delivery_customer_phone"
        android:layout_width="128dp"
        android:layout_height="25dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="#4CAF50"
        app:layout_constraintStart_toEndOf="@+id/delivery_customer_name"
        app:layout_constraintTop_toBottomOf="@+id/delivery_order_status" />

    <TextView
        android:id="@+id/delivery_customer_name"
        android:layout_width="128dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textColor="#4CAF50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_id" />

</androidx.constraintlayout.widget.ConstraintLayout>
